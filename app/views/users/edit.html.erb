<% provide :title, t("users.edit.title") %>
<% provide :button_name, t("save_change") %>
<h1><%= t "users.edit.update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <%= link_to t("change"), "http://gravatar.com/emails",
        target: "_blank" %>
    </div>
  </div>
</div>
